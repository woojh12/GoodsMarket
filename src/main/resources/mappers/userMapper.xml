<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.goodsmarket.jh.user.repository.UserRepository">
 	<insert id="insertUser" parameterType="String">
 		INSERT INTO
 			`user`
 		(
 			`loginId`
 			, `password`
 			, `name`
 			, `phone`
 			, `email`
 			, `nickName`
 		)
 		VALUE
 		(
 			#{loginId}
 			, #{password}
 			, #{name}
 			, #{phone}
 			, #{email}
 			, #{nickName}
 		)
 	</insert>
 	
 	<select id="selectUser" parameterType="Map" resultType="com.goodsmarket.jh.user.domain.User">
 		SELECT
 			`id`
 			, `loginId`
 			, `password`
 			, `name`
 			, `phone`
 			, `email`
 			, `nickName`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`user`
 		WHERE 
 			`loginId` = #{loginId} 
 		AND `password` = #{password}  			
 	</select>
 	
 	<select id="countUserId" parameterType="Map">
 		SELECT
 			count(*)
 		FROM
 			`user`
 		WHERE `loginId` = #{loginId}
 	</select>
 	
 	<select id="selectProfileImage" parameterType="map" resultType="com.goodsmarket.jh.user.domain.User">
 		SELECT
 			`id`
 			, `imagePath`
 		FROM
 			`user`
 		WHERE `id` = #{id}
 	</select>
 	
 	<delete id="deleteUser" parameterType="int">
 		DELETE
 		
 		FROM
 			`user`
 		WHERE
 			`id` = #{id}
 	</delete>
 </mapper>